<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMessage">


    <EditText
        android:id="@+id/new_msg_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="TO"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingLeft="@dimen/new_msg_edit_text_padding_right_left"
        android:paddingRight="@dimen/new_msg_edit_text_padding_right_left" />

    <ImageView
        android:id="@+id/new_msg_send_btn"
        android:layout_width="@dimen/send_icon_width"
        android:layout_height="@dimen/send_icon_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/send_msg_icon" />

    <EditText
        android:id="@+id/new_msg_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/new_msg_send_btn"
        android:background="@android:color/white"
        android:hint="@string/send_msg_text_hint"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:padding="@dimen/send_msg_padding"
        android:textSize="@dimen/send_msg_text_size" />

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/new_msg_text"
        android:background="@android:color/black" />
</RelativeLayout>
